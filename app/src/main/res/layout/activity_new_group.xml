<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewGroupActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:id="@+id/new_group_edit"
            android:layout_height="40dp"
            android:layout_marginTop="55dp"
            android:hint="Group Name"
            android:layout_marginLeft="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_group_name"
            android:text="Save"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Add New Members to the Group"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:id="@+id/new_member_edit"
            android:layout_height="40dp"
            android:hint="example@gmail.com"
            android:layout_marginTop="25dp"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="25dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_new_member"
            android:text="Add new User"
            android:textSize="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/member_text_view"
        android:inputType="textMultiLine"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="Submit"
        android:id="@+id/submit_group"
        android:layout_marginTop="20dp"/>


</androidx.appcompat.widget.LinearLayoutCompat>